{
  "name": "desktop-app",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "start:mac": "electron . --platform=darwin",
    "start:windows": "electron . --platform=win32",
    "start:linux": "electron . --platform=linux",
    "dev": "electron . --enable-logging",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:windows": "electron-builder --windows",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder --mac --windows --linux"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "electron": "^37.2.1",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.example.desktop-app",
    "productName": "Desktop App",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "index.html",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
